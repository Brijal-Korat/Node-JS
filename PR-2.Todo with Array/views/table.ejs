<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo List</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <div align="center">
        <h1>View User</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>SRNO</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Task</th>
                    <th>Status</th>
                    <th>Deadline</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% record.map((val,i) => { %>
                    <tr>
                        <td><%= ++i %></td>
                        <td><%= val.name %></td>
                        <td><%= val.phone %></td>
                        <td><%= val.email %></td>
                        <td><%= val.task %></td>
                        <td><%= val.status %></td>
                        <td><%= val.deadline %></td>
                        <td>
                            <a href="/deleteUser?delId=<%= val.id%>">Delete</a> ||
                            <a href="/editUser?editId=<%= val.id%>">Edit</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <a href="/add">Add</a>
    </div>
</body>

</html>